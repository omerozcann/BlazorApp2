@page "/"
@using BlazorApp2.Shared
@inject HttpClient http
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Adı Soyadı</label>
    <input type="email" class="form-control" id="exampleInputEmail1"  placeholder="Adı Soyadı Girin" value="@k1.adsoyad">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Numara</label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Numara" value="@k1.numara">
  </div>  
  <button type="button" class="btn btn-primary" @onclick="veriGoster">Verileri Göster</button>
  <button type="button" class="btn btn-primary" @onclick="veriKaydet">Verileri Kaydet</button>
  @durum
</form>
@code
{
    public kullanici k1 = new();
    public String durum = "";

    public void veriGoster()
    {
        k1.adsoyad = "Ahmet Can";
        k1.numara = "235403030";
    }
    public void veriKaydet()
    {       
        http.PostAsJsonAsync("api/Home/kaydet", k1);
        durum = "Kaydedildi";
    }
}